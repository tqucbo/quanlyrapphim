@using Microsoft.AspNetCore.Identity
@using QuanLyRapPhim.Models
@using Microsoft.AspNetCore.Mvc.ViewEngines

@inject SignInManager<AppUserModel> SignInManager
@inject UserManager<AppUserModel> UserManager
@inject ICompositeViewEngine Engine


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Index" asp-controller="Membership">Xin chào,
                @await UserManager.GetUserAsync(User).</a>
        </li>
        <li class="nav-item">
            <a asp-action="Logout" asp-controller="Membership" class="nav-link text-dark">Đăng xuất</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-action="Login" asp-controller="Membership">Đăng nhập</a>
        </li>
    }
</ul>